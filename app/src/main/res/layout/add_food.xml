<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/food_image_insert"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:layout_height="200dp"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/foodName_layout"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterMaxLength="11"
        app:colorControlActivated="@color/colorPrimary"
        app:errorEnabled="true"
        app:hintTextAppearance="@style/HintText"
        app:counterTextAppearance="@style/CounterText"
        android:textColorHint="@color/colorPrimary"
        android:hint="Enter Food Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/in_foodName"
            android:layout_width="match_parent"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="2dp"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_diet_type"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/spinner_border"
        android:layout_height="45dp" />

    <Spinner
        android:id="@+id/spinner_qualifier"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/spinner_border"
        android:layout_height="45dp" />

    <Button
        android:id="@+id/add_food"
        android:layout_width="wrap_content"
        android:text="Add Diet"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/gradientbtn"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>


</LinearLayout>