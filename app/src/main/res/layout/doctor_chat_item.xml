<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctor_profile_image"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="50dp"
                android:src="@drawable/dd"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Dr. Harurnur rasid"
                    android:padding="5dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dr_department"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Medicin"
                    android:padding="5dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dr_education"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:text="M.B.B.S"
                    android:padding="5dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/doctor_info"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_info_black_24dp"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/doctor_appointment"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_date_range_black_24dp"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/doctor_chat"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_chat_black_24dp"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>